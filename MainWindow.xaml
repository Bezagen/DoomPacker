<hc:Window x:Class="DoomPacker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoomPacker"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="Doom Packer" 
        MinHeight="450" 
        MinWidth="800"
        Height="450"
        Width="800"
        FontSize="15"
           WindowStartupLocation="CenterScreen"
           Background="{StaticResource SecondaryRegionBrush}">

    <Window.Resources>
        <Style
            x:Key="SideMenuButtonStyle"
            TargetType="Button"
            BasedOn="{StaticResource ButtonCustom}">
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="4,0,4,4"/>
            <Setter Property="Background" Value="{StaticResource RegionBrush}"/>
            <Setter Property="hc:BackgroundSwitchElement.MouseHoverBackground" Value="{StaticResource SecondaryRegionBrush}"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Menu
            VerticalAlignment="Top"
            HorizontalAlignment="Stretch"
            Height="34"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,0,2">
            <MenuItem Icon="" Header="Add pack" Click="MenuItem_Click"/>
            <MenuItem Icon="" Header="Preferences"/>
            <MenuItem Icon="" Header="Help"/>
            <MenuItem Header="Walpaper"/>
        </Menu>

        <ListBox
            ItemsSource="{Binding ModPacks}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="0,34,144,24"
            Background="{StaticResource SecondaryRegionBrush}"
            Style="{DynamicResource ListBoxTransparentStyle}"
            SelectedItem="{Binding SelectedModPack}">
            <ItemsControl.Template>
                <ControlTemplate>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsPresenter/>
                    </ScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <hc:Card
                        BorderThickness="0"
                        Margin="2"
                        Effect="{DynamicResource EffectShadow2}"
                        Background="Transparent">
                        <Image 
                            Width="64"
                            Height="64"
                            Source="{Binding Image}"/>
                        <hc:Card.Footer>
                            <StackPanel>
                                <TextBlock 
                                    TextWrapping="NoWrap"
                                    Style="{DynamicResource TextBlockBaseStyle}"
                                    FontSize="14"
                                    HorizontalAlignment="Center"
                                    Text="{Binding Title}"/>
                            </StackPanel>
                        </hc:Card.Footer>
                    </hc:Card>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

        </ListBox>

        <Border
            HorizontalAlignment="Right"
            VerticalAlignment="Stretch"
            MinWidth="144"
            Margin="0,32,0,22"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="2,2,0,0"
            Background="{DynamicResource RegionBrush}">
            <StackPanel 
                Orientation="Vertical"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                DataContext="{Binding SelectedModPack}">
                <Border
                    Height="66"
                    Width="66"
                    Margin="0,16,0,8"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="2"
                    Background="{DynamicResource SecondaryRegionBrush}">
                    <Image Source="{Binding Image}"/>
                </Border>
                <TextBlock 
                    Text="{Binding Title}"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    FontSize="16"
                    FontWeight="DemiBold"
                    HorizontalAlignment="Center"/>
                <Separator Margin="0, 16, 0, 8"/>
                <Button
                    Content="Play"
                    Style="{StaticResource SideMenuButtonStyle}"/>
                <Button
                    Content="Edit"
                    Style="{StaticResource SideMenuButtonStyle}"/>
                <Button
                    Content="Copy"
                    Style="{StaticResource SideMenuButtonStyle}"/>
                <Button
                    Content="Delete"
                    Style="{StaticResource SideMenuButtonStyle}"/>
            </StackPanel>
        </Border>
        <Border
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Height="24"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,2,0,0"
            Background="{DynamicResource RegionBrush}">
            <StackPanel
                Orientation="Horizontal">
                <TextBlock 
                    Text="Last played: , "
                    Foreground="White"/>
                <!--<TextBlock 
                    Text="Time played: "
                    Foreground="White"/>-->
            </StackPanel>
        </Border>
    </Grid>
</hc:Window>
